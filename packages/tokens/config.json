{
  "source": [
    "./src/tokens/**/*.json"
  ],
  "platforms": {
    "rn": {
      "transformGroup": "react-native",
      "buildPath": "./dist/",
      "prefix": "",
      "files": [
        {
          "destination": "js/tokens.js",
          "format": "javascript/es6"
        },
        {
          "format": "typescript/es6-declarations",
          "destination": "index.d.ts"
        }
      ]
    },
    "figma": {
      "transformGroup": "react-native",
      "buildPath": "./figma/",
      "prefix": "",
      "files": [
        {
          "destination": "tokens.json",
          "format": "json"
        }
      ]
    }
  }
}
